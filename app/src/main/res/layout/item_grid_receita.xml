<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top_fragment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_grid_receita_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/item_grid_receita_image"
            android:layout_width="@dimen/image_grid_largura"
            android:layout_height="@dimen/image_grid_altura"
            android:layout_gravity="center"
            android:src="@drawable/batata_doce"
            tools:ignore="ContentDescription" />


    </LinearLayout>

</androidx.cardview.widget.CardView>