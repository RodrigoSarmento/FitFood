<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemViewActivityComida">

    <Button
        android:id="@+id/button_info_comida"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/ic_info_blue" />

    <ImageView
        android:id="@+id/image_detalhe_comida"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/button_info_comida"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titulo_detalhe_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_detalhe_comida"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/ingredientes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_detalhe_comida"
        android:layout_centerHorizontal="true"
        android:text="@string/ingredientes"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/ingredientes_detalhe_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientes_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp" />

</RelativeLayout>